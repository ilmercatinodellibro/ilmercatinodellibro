{
  "name": "@ilmercatinodellibro/server",
  "version": "0.0.1",
  "description": "",
  "author": "Dreamonkey Srl <info@dreamonkey.com> (https://dreamonkey.com)",
  "contributors": [
    "Francesco Bonacini <f.bonacini@dreamonkey.com>",
    "Paolo Caleffi <p.caleffi@dreamonkey.com>",
    "Alessandro Vandelli <a.vandelli@dreamonkey.com>"
  ],
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf dist && rimraf client-dist && rimraf src/@generated",
    "prebuild": "pnpm clean && pnpm generate",
    "build": "nest build",
    "import:books": "node dist/src/commander import",
    "import:schools": "node dist/src/commander import --school",
    "lint": "eslint --ext .js,.ts ./ --fix --report-unused-disable-directives",
    "format": "prettier --write \"**/*.{js,ts,graphql,md,json,yml,prisma}\" --ignore-path .gitignore",
    "start": "nest start",
    "start:repl": "pnpm run start --entryFile repl",
    "dev": "pnpm run start:dev",
    "generate:graphql": "pnpm run run-ts ./src/generate.ts",
    "generate:prisma": "prisma generate",
    "generate": "pnpm run generate:prisma && pnpm run generate:graphql",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset -f",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "db": "docker-compose up",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose stop",
    "db:seed": "prisma db seed",
    "db:psql": "docker exec -it ilmercatinodellibro-postgres psql -U postgres -d postgres",
    "queue:cli": "docker exec -it ilmercatinodellibro-redis redis-cli",
    "queue:flush": "pnpm run queue:cli FLUSHDB",
    "queue:list": "pnpm run queue:cli --scan",
    "queue:show": "pnpm run queue:cli HGETALL",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "run-ts": "node -r tsconfig-paths/register -r ts-node/register"
  },
  "dependencies": {
    "@apollo/server": "^4.9.4",
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/bullmq": "^10.0.1",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/event-emitter": "^2.0.2",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "@pdfme/common": "4.0.0-alpha.0",
    "@pdfme/generator": "4.0.0-alpha.0",
    "@pdfme/schemas": "4.0.0-alpha.0",
    "@prisma/client": "^5.5.1",
    "argon2": "^0.31.1",
    "async": "^3.2.4",
    "bullmq": "^4.12.5",
    "csv": "^6.3.5",
    "ejs": "^3.1.9",
    "firebase-admin": "^11.11.0",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "nats": "^2.17.0",
    "nest-commander": "^3.12.5",
    "node-notifier": "^10.0.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "dependencyComments": {
    "undici": "Node 18+ uses undici for its fetch implementation, but without shipping appropriate types. Volar pick up DOM typings for server workspace too making things worse. We resolved to use undici fetch as a separate package for now, to avoid TS errors during the compilation"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@types/async": "^3.2.24",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node-notifier": "^8.0.5",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.16",
    "class-transformer": "^0.5.1",
    "graphql-scalars": "^1.23.0",
    "jest": "28.1.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.5.1",
    "prisma-nestjs-graphql": "^19.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "undici": "^5.28.4",
    "zod": "^3.22.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "pnpm run-ts prisma/seeds/index.ts"
  }
}
