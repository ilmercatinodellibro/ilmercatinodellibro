{
  "name": "@ilmercatinodellibro/client",
  "version": "0.0.1",
  "description": "Il Mercatino del Libro webapp",
  "productName": "Il Mercatino del Libro",
  "author": "Dreamonkey Srl <info@dreamonkey.com> (https://dreamonkey.com)",
  "private": true,
  "scripts": {
    "icons:generate": "pnpm dlx @quasar/icongenie g -i src/assets/favicon.png",
    "clean": "rimraf .quasar && rimraf src/@generated **.graphql.ts",
    "lint:script": "eslint --ext .js,.ts,.vue ./ --fix --report-unused-disable-directives",
    "lint:style": "stylelint \"**/*.{css,scss,vue}\" --fix --report-needless-disables",
    "lint": "pnpm lint:script && pnpm lint:style",
    "format": "prettier --write \"**/*.{json,md,graphql,vue,js,ts,yml}\" --ignore-path .gitignore",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "dev": "concurrently --raw --passthrough-arguments \"quasar dev {@}\" \"pnpm:generate:watch\" --",
    "dev:pwa": "pnpm dev -m pwa",
    "build": "quasar build",
    "build:pwa": "pnpm build -m pwa",
    "serve": "./node_modules/@quasar/cli/bin/quasar.js serve ../server/client-dist/ --history",
    "start": "pnpm build && pnpm serve",
    "start:test": "pnpm start --port 8080 --silent",
    "start:server": "cross-env CLIENT_URL='http://localhost:8080' MAIL_HOST=localhost MAIL_PORT=7777 pnpm --filter @ilmercatinodellibro/server start",
    "generate": "graphql-codegen --config codegen.ts",
    "generate:watch": "pnpm generate --watch",
    "test:e2e": "cross-env NODE_ENV=test start-test start:test 8080 \"cypress open --e2e\"",
    "test:e2e:dev": "cross-env NODE_ENV=test start-test \"quasar dev\" 8080 \"cypress open --e2e\"",
    "test:e2e:ci": "cross-env NODE_ENV=test start-test start:test 8080 \"cypress run --e2e\"",
    "test:component": "cross-env NODE_ENV=test cypress open --component",
    "test:component:ci": "cross-env NODE_ENV=test cypress run --component"
  },
  "overridesComments": {
    "_root": "See root package.json => overridesComments for more info."
  },
  "dependencies": {
    "@apollo/client": "^3.9.4",
    "@quasar/extras": "^1.16.9",
    "@vue/apollo-composable": "^4.0.1",
    "@vueuse/components": "^10.7.2",
    "@vueuse/core": "^10.7.2",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "firebase": "^10.8.0",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.15.0",
    "jwt-decode": "^3.1.2",
    "lodash-es": "^4.17.21",
    "quasar": "^2.14.3",
    "vue": "^3.4.19",
    "vue-i18n": "^9.9.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@dreamonkey/graphql-codegen-near-operation-file": "^0.1.2",
    "@dreamonkey/graphql-codegen-vue-apollo-plugin": "^0.1.2",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript-apollo-client-helpers": "^3.0.0",
    "@parcel/watcher": "^2.4.1",
    "@quasar/app-vite": "^1.7.3",
    "@quasar/cli": "^2.3.0",
    "@quasar/quasar-app-extension-apollo": "^2.2.0",
    "@quasar/quasar-app-extension-testing-e2e-cypress": "^5.2.0",
    "@types/lodash-es": "^4.17.12",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cypress": "^13.7.0",
    "eslint-plugin-cypress": "^2.15.1",
    "smtp-tester": "^2.1.0",
    "vite-plugin-checker": "^0.6.4",
    "vue-tsc": "^1.8.20",
    "workbox-build": "^7.0.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  }
}
